
@{
    ViewData["Title"] = "Index";
}
@model List<CourseViewModel>

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Tüm Kurslar</h5>
        <a asp-controller="Courses" asp-action="Create" class="btn btn-primary mb-3">Kurs Ekle</a>
        @if (Model.Any())
        {


            <div class="container">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Resim</th>
                            <th>Kurs Adı</th>
                            <th>Kurs Kategori</th>
                            <th>Fiyat</th>
                            <th>Süre</th>
                            <th>İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td></td>
                                <td>@item.Name</td>
                                <td>@item.Category.Name</td>
                                <td>@item.Price</td>
                                <td>@item.Feature.Duration</td>
                                <td>
                                    <a asp-controller="Courses" asp-action="Update" asp-route-id="@item.Id" class="btn btn-success btn-sm">Güncelle</a>
                                    <a asp-controller="Courses" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>


        }
        else
        {
            <div class="alert alert-info" role="alert">
                Satın alınmış bir kursunuz bulunmamaktadır.
            </div>
        }
    </div>
</div>

